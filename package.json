{
  "name": "@codebundlesbyvik/ntp-sync",
  "version": "1.0.0",
  "description": "Network Time Protocol synchronization library.",
  "keywords": [
    "ntp",
    "sync",
    "client",
    "server",
    "date",
    "module",
    "esm"
  ],
  "license": "MPL-2.0",
  "author": "codebundlesbyvik",
  "files": [
    "dist/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vikputthiscodeongit/ntp-sync.git"
  },
  "bugs": "https://github.com/vikputthiscodeongit/ntp-sync/issues",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "module": "./dist/index.js"
    }
  },
  "type": "module",
  "scripts": {
    "compile-js": "tsc",
    "lint": "eslint",
    "lint-fix": "eslint --fix",
    "build": "cross-env NODE_ENV=production npm run lint-fix && rimraf dist && npm run compile-js && npm run minify",
    "minify": "terser dist/index.js --output dist/index.js --ecma 2021 --compress passes=2"
  },
  "dependencies": {
    "@codebundlesbyvik/js-helpers": "^2.1.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@tsconfig/recommended": "^1.0.8",
    "@types/node": "^22.15.21",
    "cross-env": "^7.0.3",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "globals": "^16.1.0",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "terser": "^5.39.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1"
  },
  "engines": {
    "node": ">=12.22.0"
  }
}
